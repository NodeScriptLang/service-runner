{
    "name": "@nodescript/service-runner",
    "version": "1.6.0",
    "description": "NodeScript Service Runner",
    "type": "module",
    "sideEffects": false,
    "exports": {
        ".": "./out/main/index.js"
    },
    "main": "out/main/index.js",
    "types": "out/main/index.d.ts",
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "npm run clean && tsc -b -w",
        "compile": "npm run clean && tsc -b",
        "lint": "eslint --ext=.js,.ts,.vue --cache .",
        "test": "NODE_NO_WARNINGS=1 NODE_ENV=test mocha",
        "version": "npm run compile",
        "postversion": "npm publish --access=public && git push --tags origin main"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@nodescript/eslint-config": "^1.0.4",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.15.5",
        "eslint": "^8.36.0",
        "mocha": "^10.2.0",
        "pre-commit": "^1.2.2",
        "typescript": "^5.0.2"
    },
    "dependencies": {
        "@nodescript/core": "^7.8.0",
        "@nodescript/errors": "^1.1.1",
        "@nodescript/http-server": "^1.3.0",
        "@nodescript/logger": "^1.4.2",
        "@nodescript/microservice": "^1.2.0",
        "@nodescript/service-compiler": "^1.10.0",
        "dotenv": "^16.0.3",
        "isomorphic-ws": "^5.0.0",
        "mesh-config": "^1.0.0",
        "mesh-ioc": "^3.2.0",
        "ws": "^8.13.0"
    }
}
